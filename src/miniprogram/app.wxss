/**app.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.list {
  font-size: 26rpx;
  line-height: 50rpx;
  color: #333;
}
.list .item {
  padding: 20rpx 0;
  border-bottom: 2rpx dotted #ddd;
}
.list .item:last-child {
  border-bottom: none;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 300;
  visibility: visible;
  opacity: 0.7;
}
